{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    /* Transpilation */
    "module": "NodeNext",
    "outDir": "dist",

    /* Declaration */
    "declaration": true,

    /* Prevent DOM Types */
    "lib": ["es2022"]
  }
}
